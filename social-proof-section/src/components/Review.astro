---
import { Image } from "astro:assets";

const { name, avatar, review } = Astro.props;
---

<div
  class="h-[248px] w-[327px] rounded-[8px] bg-c-veryDarkMagenta px-[32px] py-[40px] lg:h-[234px] lg:w-[350px]"
>
  <div class="space-y-[23px] text-[17px]">
    <div class="flex gap-[23px]">
      <!-- avatar -->
      <div class="size-[40px] overflow-hidden rounded-full">
        <Image src={avatar} alt="Avatar" />
      </div>
      <!-- name -->
      <div class="flex flex-col">
        <span class="font-700 text-c-white">{name}</span>
        <span class="text-c-softPink">Verified Buyer</span>
      </div>
    </div>
    <p class="font-500 leading-[22px] -tracking-[0.3px] text-c-white">
      {review}
    </p>
  </div>
</div>
