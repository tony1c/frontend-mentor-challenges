---
import SectionContainer from '../SectionContainer.astro';
import MembershipCard from '../../components/MembershipCard.astro';
---

<SectionContainer id='membership-options' width='small'>
  <div class='space-y-300 text-neutral-900'>
    <h2 class='text-center text-preset-2-mobile md:text-preset-2'>
      Membership options
    </h2>
    <!-- grid -->
    <div
      class='mx-auto grid grid-cols-1 place-items-center gap-300 md:grid-cols-2 lg:grid-cols-3'>
      <!-- membership cards -->
      <div>
        <MembershipCard
          option='Starter'
          price='19'
          firstCheckbox='1 book/month'
          secondCheckbox='Online Forums'
        />
      </div>

      <div>
        <MembershipCard
          option='Pro'
          price='29'
          firstCheckbox='2 books/month'
          secondCheckbox='Virtual meetups'
          bestValue
        />
      </div>

      <div>
        <MembershipCard
          option='Enterprise'
          firstCheckbox='Team access'
          secondCheckbox='Private sessions'
          ctaText='Talk to us'
        />
      </div>
    </div>
  </div>
</SectionContainer>
